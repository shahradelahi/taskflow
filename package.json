{
  "name": "@litehex/taskflow",
  "description": "A versatile task management and automation library with CLI tools for seamless development.",
  "version": "0.2.0-canary.4",
  "main": "dist/lib.cjs",
  "module": "dist/lib.js",
  "types": "dist/lib.d.cts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/lib.d.ts",
        "default": "./dist/lib.js"
      },
      "require": {
        "types": "./dist/lib.d.cts",
        "default": "./dist/lib.cjs"
      }
    }
  },
  "bin": "./dist/index.js",
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint --fix src/**/*.ts",
    "format:check": "prettier --check \"**/*.{ts,md}\"",
    "format": "prettier --write .",
    "prepublishOnly": "pnpm run format:check && pnpm run lint && pnpm run build"
  },
  "packageManager": "pnpm@8.11.0",
  "type": "module",
  "dependencies": {
    "chalk": "^5.0.0",
    "chokidar": "^3.5.3",
    "commander": "^11.1.0",
    "cron": "^3.1.6",
    "cronstrue": "^2.44.0",
    "debounce": "^2.0.0",
    "deepmerge": "^4.3.1",
    "dotenv": "^16.3.1",
    "execa": "^8.0.1",
    "ora": "^7.0.1",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@antfu/ni": "^0.21.12",
    "@types/chai": "^4.3.11",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "chai": "^4.3.10",
    "eslint": "^8.0.1",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0 || ^16.0.0 ",
    "eslint-plugin-promise": "^6.0.0",
    "mocha": "^10.2.0",
    "prettier": "^3.1.0",
    "tsx": "^4.6.2",
    "type-fest": "^4.8.2"
  },
  "peerDependencies": {
    "cron": "^3.1.6"
  },
  "author": "Shahrad Elahi <shahrad@litehex.com> (https://github.com/shahradelahi)",
  "repository": {
    "type": "git",
    "url": "https://github.com/shahradelahi/taskflow.git"
  },
  "license": "GPL-3.0",
  "publishConfig": {
    "access": "public"
  }
}
